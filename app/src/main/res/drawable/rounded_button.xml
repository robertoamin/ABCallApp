<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define el radio de los bordes <corners android:radius="16dp"/> -->
     <!-- <solid android:color="@color/teal_100"/> Color de fondo del botón -->
     <!-- <stroke android:width="2dp" /> android:color="@color/teal_100" Opcional: borde del botón -->
    <!-- Sombra -->
    <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Color de sombra semi-transparente -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Botón principal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/teal_200" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
